# Configuración del CMS Visual
# Copia este archivo como .env y personaliza las variables

# Configuración de la aplicación
APP_NAME="Tu Empresa"
APP_URL="https://tudominio.com"
ENVIRONMENT="production"

# Configuración del admin
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="cambiar_esta_password"

# Configuración de contacto
CONTACT_EMAIL="contacto@tuempresa.com"
CONTACT_PHONE="+1 (555) 123-4567"
CONTACT_ADDRESS="Tu Ciudad, Tu País"

# Redes sociales
WHATSAPP_NUMBER="1234567890"
FACEBOOK_URL="https://facebook.com/tuempresa"
INSTAGRAM_URL="https://instagram.com/tuempresa"

# Configuración de archivos
UPLOAD_MAX_SIZE="50M"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,mp4,mov,avi,pdf,doc,docx"

# Configuración de email (opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="tu-email@gmail.com"
SMTP_PASSWORD="tu-app-password"
SMTP_ENCRYPTION="tls"

# Configuración de backup
BACKUP_ENABLED="true"
BACKUP_RETENTION_DAYS="7"

# SSL/TLS
SSL_ENABLED="true"
SSL_CERT_PATH="/etc/ssl/certs/cert.pem"
SSL_KEY_PATH="/etc/ssl/private/key.pem"

# Configuración de base de datos (para futuras expansiones)
DB_TYPE="json"  # json, mysql, postgresql
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="cms_visual"
DB_USERNAME="cms_user"
DB_PASSWORD="secure_password"